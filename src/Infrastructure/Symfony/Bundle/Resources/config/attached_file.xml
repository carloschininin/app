<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services
        https://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="app.public_dir">%kernel.project_dir%/public</parameter>
    </parameters>

    <services>
        <service id="CarlosChininin\App\Infrastructure\Service\FileUploader">
            <argument>%app.public_dir%</argument>
            <argument>%attachment_directory%</argument>
        </service>
        <service id="CarlosChininin\App\Infrastructure\Twig\Extension\AttachedFileExtension">
            <argument>%attachment_directory%</argument>
            <tag name="twig.extension"/>
        </service>
    </services>
</container>
