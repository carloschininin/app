
{% macro btn(title, icon, btn_class='default',attributes='') -%}
    <button  class="btn btn-{{btn_class}} {% if not title %}btn-icon{% endif %}" {{attributes}}>
        {% if title %}<span>{% endif %}
            {% if icon %}<i class="fa flaticon-{{ icon }}"></i>{% endif %}
            {% if title %}<span>{{title|trans}}</span>{% endif %}
            {% if title %}</span>{% endif %}
    </button>
{%- endmacro %}

