{% macro btn_link(title, link, icon, btn_class='default',attributes='') -%}
    <a href="{{ link }}"
       class="btn btn-sm
        {% if not title -%}
            btn-icon btn-light-{{ btn_class }}
        {%- else -%}
            btn-{{ btn_class }}
        {%- endif -%}"
       title="{{ title }}">
        {%- if icon -%}<i class="{{ icon }}"></i>{%- endif -%}
        {%- if title -%}<span>{{title }}</span>{%- endif -%}
    </a>
{%- endmacro %}

